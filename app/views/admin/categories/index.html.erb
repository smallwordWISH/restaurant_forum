      <%= link_to '餐廳評論網', root_path, class: "btn navbar-btn col-xs-5 col-sm-5 col-md-3 col-lg-3"%>
    </div>
    <ul class="menu">
      <li>
        <%= link_to '管理者後台', admin_restaurants_path, class: "btn navbar-btn" %>
