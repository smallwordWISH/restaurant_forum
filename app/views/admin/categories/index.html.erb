<div id="content">
  <div class="container container-fluid col-xs-12 col-sm-12 col-md-offset-2 col-md-9 col-lg-offset-2 col-lg-8">
    <div class="all-category">
      <% if flash[:notice] %>
        <div class="notice alert alert-success col-xs-10 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6"><%= flash[:notice] %></div>
      <% end %>
    <div>
      <%= link_to 'Restaurant', admin_restaurants_path %>
      <%= link_to 'Category', admin_categories_path %>       
    </div>
    <table id="category-table" class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th colspan="2">Method</th>
        </tr>
      </thead>
      <% @categories.each do |category| %>
        <tr>
          <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
            <%= category.id %>
          </td>
          <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            [<%= category.name %>] 
          </td>
        </tr>
      <% end %>
    </table>      
  </div>
</div>