<div id="my-nav" class="navbar navbar-inverse ">
  <div class="container container-fluid">
    <div id="nav-title">
      <%= link_to '餐廳評論網', root_path, class: "navbar-brand"%>
    </div>
    <ul class="menu">

      <li>
        <%= link_to '管理者後台', admin_restaurants_path, class: "btn navbar-btn" %>
        <%= link_to '登出', destroy_user_session_path, class: "btn navbar-btn", method: :delete if user_signed_in?  %>
        <%= link_to '登入', user_session_path, class: "btn navbar-btn" if !user_signed_in? %>           
      </li>
    </ul>
  </div>
</div>
<div id="content">
  <div class="container container-fluid">
    <div class="all-restaurant">
      <div id="new-restaurant-btn" class="pull-right">
        <%= link_to '', new_admin_restaurant_path, class: "btn btn-link glyphicon glyphicon-plus" %>
      </div>
      <table class="table">
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td>
              <%= link_to "#{restaurant.name}", admin_restaurant_path(restaurant) %>
            </td>
            <td>
               <%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %>
            </td>
            <td>
               <%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </table>      
    </div>
    <div id="paginate">
      <%= paginate @restaurants,  window: 2 %>
    </div>
  </div>
</div>


