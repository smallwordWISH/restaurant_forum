<div id="the-form" class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name, class: "form-control", maxlength: 10%>
      <% if @user.errors[:name].present? %>
        <span style="color: red" ><%= @user.errors.full_messages.to_sentence %></span>
      <% end%>
    </div>
    <div class="form-group">
      <%= f.label :intro, '自我介紹' %>
      <%= f.text_area :intro, class: "form-control", maxlength: 80%>
    </div>
    <div class="form-group">
      <%= f.label :avatar, '上傳大頭貼' %>
      <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
      <%= f.file_field :avatar %>
    </div>
    <div id="form-submit">
      <%= link_to 'Cancel', user_path(@user), class: "btn btn-danger" %>
      <%= f.submit 'Update', class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
