<% if flash[:notice] %>
    <div class="col-md-2"></div>
    <div class="notice alert alert-success col-md-8">
      <%= flash[:notice] %>  
    </div>
<% end %>
<div id="user-item">
  <div class="row">
    <div class="user-imgbox col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-1">
      <div class="user-imgbox-inner">
        <%= image_tag @user.avatar, class:"image-responsive center-block" %>
      </div>
    </div>
    <div class="user-info col-xs-10 col-xs-offset-1 col-md-7">
      <h3><%= @user.name %></h3>
      <p><%= @user.email %></p>
      <p class="user-intro"><%= @user.intro %></p>
      <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
    </div>
  </div>
</div>
<hr />
<div class="panel panel-info">
  <div class="panel-heading">
    <h4 class="panal-title">已評論餐廳</h4>
  </div>
  <div class="panel-body">
    <%@commented_restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant) do %> 
        <div class="my-restaurant col-xs-6 col-md-2">
          <div class="my-restaurant-imgbox">
            <div class="my-restaurant-imgbox-inner">
              <%=image_tag restaurant.image, class:"image-responsive center-block" %>
            </div>
            <div class="my-restaurant-name text-center">
              <%= restaurant.name %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>  
</div>