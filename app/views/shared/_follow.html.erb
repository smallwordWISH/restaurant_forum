<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to '', followship_path(user), method: :delete, class: "glyphicon glyphicon-star" %>
  <% else %>
    <%= link_to '', followships_path(following_id: user.id), method: :post, class: "glyphicon glyphicon-star-empty"  %>
  <% end %>
<% end %>